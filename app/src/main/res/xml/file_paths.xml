<?xml version="1.0" encoding="utf-8"?>

<!-- Allows to hand a content:// URI to camera app that points to an image file -->

<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- App-specific external storage for full-size photos -->
    <external-files-path
        name="images"
        path="Pictures/" />
    <!-- Allow cache -->
    <cache-path
        name="cache_images"
        path="images/" />
</paths>